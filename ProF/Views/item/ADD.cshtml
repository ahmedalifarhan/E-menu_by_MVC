
@{

}

@model IEnumerable<item>
<a asp-controller="item" asp-action="ADD_Item" class="btn btn-primary">Add New item</a>
<div style="margin-left:100%;margin-top:0%;font-size:30px;">
    <a asp-action="logout" asp-controller="homepage" title="Logout" style="background: none; border: none;">
        <i class="fa-solid fa-arrow-right-from-bracket " style="color:#304850"></i>
    </a>
</div>
<script src="https://kit.fontawesome.com/260c226195.js" crossorigin="anonymous"></script>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>item_id</th>
            <th>item_Name</th>
            <th>item_Description/th>
            <th>item_Cost</th>


            <th>category</th>
            <th>stars</th>
            <th>item_image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.item_id</td>
                <td>@item.item_Name</td>
                <td>@item.item_Description</td>
                <td>@item.item_Cost</td>

                <td>@item.category</td>
                <td>@item.stars</td>

                @*<td>@item.item_image</td>*@
                <td colspan="2">
                    <img src="~/img1/@item.item_image" alt=" dept_img_error" style="border-radius:50%; width:70px;height:70px" />
                </td>

                <td colspan="2">
                    <a href="/item/Delete/?id=@item.item_id">Delete </a>|
                    <a href="/item/Edit/?id=@item.item_id">Edit </a>


                </td>
            </tr>
        }
    </tbody>

</table>

<script>

    let timeoutId;

    function resetTimer() {
        clearTimeout(timeoutId);
        timeoutId = setTimeout(function () {
            window.location.href = "/admin/login_admin";
        }, 300000); // 5m
    }

    // تم استدعاء resetTimer عند تحريك الماوس أو الضغط على أي مفتاح
    document.addEventListener("mousemove", resetTimer);
    document.addEventListener("keypress", resetTimer);

    // يمكن أيضًا استدعاء resetTimer مباشرةً عند بدء التحميل لصفحة ال welcome
    resetTimer();
</script>
