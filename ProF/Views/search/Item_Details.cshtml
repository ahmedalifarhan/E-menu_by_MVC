<script>

	let timeoutId;

	function resetTimer() {
		clearTimeout(timeoutId);
		timeoutId = setTimeout(function () {
			window.location.href = "/Homepage/Logout";
		}, 100000); // 5 seconds
	}

	// تم استدعاء resetTimer عند تحريك الماوس أو الضغط على أي مفتاح
	document.addEventListener("mousemove", resetTimer);
	document.addEventListener("keypress", resetTimer);

	// يمكن أيضًا استدعاء resetTimer مباشرةً عند بدء التحميل لصفحة ال welcome
	resetTimer();
</script>

<script>
	var stars = document.querySelectorAll(".rating .fa");

	stars.forEach(function (star, index) {
		star.addEventListener("click", function () {
			var rating = index + 1;
			for (var i = 0; i < stars.length; i++) {
				if (i < rating) {
					stars[i].classList.add("active");
				} else {
					stars[i].classList.remove("active");
				}
			}
		});

		star.addEventListener("mouseover", function () {
			var rating = index + 1;
			for (var i = 0; i < rating; i++) {
				stars[i].classList.add("hover");
			}
		});

		star.addEventListener("mouseout", function () {
			var rating = index + 1;
			for (var i = 0; i < stars.length; i++) {
				stars[i].classList.remove("hover");
			}
		});
	});
	let counter = 0;
	const counterElement = document.querySelector('.counter');
	const cartCounterElement = document.querySelector('.cart-icon .counter');

	function increment() {
		counter++;
		counterElement.innerText = counter;
		cartCounterElement.innerText = counter;
	}

	function decrement() {
		if (counter > 0) {
			counter--;
			counterElement.innerText = counter;
			cartCounterElement.innerText = counter;
		}
	}
</script>
